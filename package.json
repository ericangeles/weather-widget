{
  "name": "weather-widget",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "prebuild": "node --experimental-specifier-resolution=node --loader ./crypto-loader.mjs ./node_modules/.bin/vite --version",
    "build": "vue-tsc -b && node --experimental-specifier-resolution=node --loader ./crypto-loader.mjs ./node_modules/.bin/vite build",
    "postbuild": "node verify-api-key.js",
    "preview": "vite preview"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "axios": "^1.10.0",
    "crypto-js": "^4.2.0",
    "vue": "^3.5.17",
    "vuetify": "^3.5.9"
  },
  "devDependencies": {
    "@originjs/vite-plugin-federation": "^1.4.1",
    "@types/node": "^24.0.14",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vue/tsconfig": "^0.7.0",
    "typescript": "~5.8.3",
    "vite": "^5.0.10",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vue-tsc": "^2.2.12"
  }
}
